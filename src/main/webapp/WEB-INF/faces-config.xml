<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<managed-bean>
		<managed-bean-name>pessoaBean</managed-bean-name>
		<managed-bean-class>app.control.PessoaBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>alunoBean</managed-bean-name>
		<managed-bean-class>app.control.AlunoBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listar</from-outcome>
			<to-view-id>/listar.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listar.xhtml</display-name>
		<from-view-id>/listar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>atualizar</from-outcome>
			<to-view-id>/atualizar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>atualizar.xhtml</display-name>
		<from-view-id>/atualizar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>atualizar</from-outcome>
			<to-view-id>/atualizar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>salvar</from-outcome>
			<to-view-id>/salvar.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>salvar.xhtml</display-name>
		<from-view-id>/salvar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listar.xhtml</display-name>
		<from-view-id>/listar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listar.xhtml</display-name>
		<from-view-id>/listar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>salvar</from-outcome>
			<to-view-id>/salvar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>atualizar.xhtml</display-name>
		<from-view-id>/atualizar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listarAluno?faces-redirect=true</from-outcome>
			<to-view-id>/listarAluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<render-kit>
        <renderer>
            <component-family>javax.faces.Messages</component-family>
            <renderer-type>javax.faces.Messages</renderer-type>
            <renderer-class>app.util.BootstrapMessagesRenderer</renderer-class>
        </renderer>
    </render-kit>
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>
</faces-config>