<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>pessoaController</managed-bean-name>
		<managed-bean-class>app.control.PessoaController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>listar.xhtml</display-name>
		<from-view-id>/listar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>atualizar</from-outcome>
			<to-view-id>/atualizar.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>atualizar.xhtml</display-name>
		<from-view-id>/atualizar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
</faces-config>