<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<managed-bean>
		<managed-bean-name>pessoaBean</managed-bean-name>
		<managed-bean-class>app.control.PessoaBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>alunoBean</managed-bean-name>
		<managed-bean-class>app.control.AlunoBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>atualizarAluno.xhtml</display-name>
		<from-view-id>/atualizarAluno.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listarAluno?faces-redirect=true</from-outcome>
			<to-view-id>/listarAluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listarAluno?faces-redirect=true</from-outcome>
			<to-view-id>/listarAluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>atualizarAluno.xhtml</display-name>
		<from-view-id>/atualizarAluno.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listarAluno?faces-redirect=true</from-outcome>
			<to-view-id>/listarAluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>salvarAluno?faces-redirect=true</from-outcome>
			<to-view-id>/salvarAluno.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listarAluno.xhtml</display-name>
		<from-view-id>/listarAluno.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio?faces-redirect=true</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>salvarAluno.xhtml</display-name>
		<from-view-id>/salvarAluno.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio?faces-redirect=true</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>salvarProfessor?faces-redirect=true</from-outcome>
			<to-view-id>/salvarProfessor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>salvarProfessor.xhtml</display-name>
		<from-view-id>/salvarProfessor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio?faces-redirect=true</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Inicio.xhtml</display-name>
		<from-view-id>/Inicio.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>listarProfessor?faces-redirect=true</from-outcome>
			<to-view-id>/listarProfessor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listarProfessor.xhtml</display-name>
		<from-view-id>/listarProfessor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Inicio?faces-redirect=true</from-outcome>
			<to-view-id>/Inicio.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<render-kit>
        <renderer>
            <component-family>javax.faces.Messages</component-family>
            <renderer-type>javax.faces.Messages</renderer-type>
            <renderer-class>app.util.BootstrapMessagesRenderer</renderer-class>
        </renderer>
    </render-kit>
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>
</faces-config>